# Normalize text files
* text=auto eol=lf

# Ignore everything by default in zip exports
* export-ignore

# Explicitly include the addons folder
/addons export-ignore=false
/addons/** export-ignore=false

# But still exclude demo and generated files
/addons/flowkit/demos/** export-ignore
/addons/flowkit/saved/event_sheet/** export-ignore
/addons/flowkit/gen_*.gd* export-ignore
